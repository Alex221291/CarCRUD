@model Motos

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-4"></div>
    <div class="col-4">
        <h2 class="text-center mb-2">Create Moto</h2>
        <hr class="mb-3" />
        <form asp-controller="Moto" asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-4">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="Model"></label>
                <input asp-for="Model" class="form-control"/>
                <span asp-validation-for="Model"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="DataBuild"></label>
                <input asp-for="DataBuild" class="form-control"/>
                <span asp-validation-for="DataBuild"></span>
            </div>
            <div class="form-group mb-4">
                <input type="submit" value="Create" class="btn btn-outline-success"/>
                <a asp-controller="Moto" asp-action="Index" class="btn btn-outline-primary ml-4">Back to list</a>
            </div>
        </form>
    </div>
    <div class="col-4"></div>
</div>

@section scripts{
 
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
