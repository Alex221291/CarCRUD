@model CarCRUD.Models.Cars?

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-4"></div>
    <div class="col-4">
        <h2 class="text-center mb-2">Update User</h2>
        <hr class="mb-3" />
        <form asp-controller="Car" asp-action="Edit" method="post">
            <input asp-for="Id" hidden="hidden"/>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-4">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="Type"></label>
                <input asp-for="Type" class="form-control"/>
            </div>
            <div class="form-group mb-4">
                <label asp-for="Model"></label>
                <input asp-for="Model" class="form-control"/>
            </div>
            <div class="form-group mb-4">
                <label asp-for="Color"></label>
                <input asp-for="Color" class="form-control"/>
            </div>
            <div class="form-group mb-4">
                <input type="submit" value="Update" class="btn btn-outline-secondary"/>
                <a asp-controller="Car" asp-action="Index" class="btn btn-outline-primary ml-4">Back to list</a>
            </div>
        </form>
    </div>
    <div class="col-4"></div>
</div>
